{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "ltconsultdemo-adf"
		},
		"ltconsultdemo_AdventureWorksLT_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'ltconsultdemo_AdventureWorksLT'"
		},
		"ltconsultdemo_SQL_AdventureWorksLT_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'ltconsultdemo_SQL_AdventureWorksLT'"
		},
		"ltconsultdemo_AdventureWorksLT_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://ltconsultdemoadls.dfs.core.windows.net/"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ltconsultdemo-adf_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"ltconsultdemo_AdventureWorksLT_accountKey": {
						"value": "[parameters('ltconsultdemo_AdventureWorksLT_accountKey')]"
					},
					"ltconsultdemo_SQL_AdventureWorksLT_connectionString": {
						"value": "[parameters('ltconsultdemo_SQL_AdventureWorksLT_connectionString')]"
					},
					"ltconsultdemo_AdventureWorksLT_properties_typeProperties_url": {
						"value": "[parameters('ltconsultdemo_AdventureWorksLT_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "ltconsultdemo-adf_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'ltconsultdemo-adf_ArmTemplate_0')]"
			]
		}
	]
}